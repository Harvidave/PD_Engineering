        <Button Content="SEPD" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="SEPDClick"/>
        <Label Content="EUR" HorizontalAlignment="Left" Margin="276,156,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.016,0.922"/>
        <TextBox Name="Eur" HorizontalAlignment="Left" Height="23" Margin="276,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
